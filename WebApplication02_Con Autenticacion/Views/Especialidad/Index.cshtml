@model IEnumerable<WebApplication02_Con_Autenticacion.Models.especialidades>

@{
    ViewBag.Title = "Especialidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestión de Especialidades</h2>

<!-- Solo SuperAdmin o Administrador pueden crear -->
@if (User.IsInRole("SuperAdmin") || User.IsInRole("Administrador"))
{
    <p>
        @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-success mb-3" })
    </p>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Dias)</th>
            <th>@Html.DisplayNameFor(model => model.Franja_HI)</th>
            <th>@Html.DisplayNameFor(model => model.Franja_HF)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Dias)</td>
                <td>@Html.DisplayFor(modelItem => item.Franja_HI)</td>
                <td>@Html.DisplayFor(modelItem => item.Franja_HF)</td>
                <td>
                    <!-- Todos los roles pueden ver detalles -->
                    @Html.ActionLink("Detalles", "Details", new { id = item.IdEspecialidad }, new { @class = "btn btn-info btn-sm mx-1" })

                    <!-- Solo SuperAdmin o Administrador pueden editar o eliminar -->
                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Administrador"))
                    {
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdEspecialidad }, new { @class = "btn btn-warning btn-sm mx-1" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdEspecialidad }, new { @class = "btn btn-danger btn-sm mx-1" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
