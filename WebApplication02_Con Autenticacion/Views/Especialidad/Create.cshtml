@model WebApplication02_Con_Autenticacion.Models.especialidades

@{
    ViewBag.Title = "Crear Especialidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5 veris-crear-container">
    <h2 class="veris-crear-title">Registrar Nueva Especialidad</h2>
    <p class="veris-crear-subtitle">Complete la información de la especialidad</p>
    <hr class="veris-crear-divider" />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger veris-crear-validation" })

        <!-- 🔹 Descripción -->
        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "veris-crear-label" })
            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control veris-crear-input", placeholder = "Ejemplo: Pediatría" } })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger veris-crear-error" })
        </div>

        <!-- 🔹 Días -->
        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Dias, htmlAttributes: new { @class = "veris-crear-label" })
            @Html.EditorFor(model => model.Dias, new { htmlAttributes = new { @class = "form-control veris-crear-input", placeholder = "Ejemplo: Lunes a Viernes" } })
            @Html.ValidationMessageFor(model => model.Dias, "", new { @class = "text-danger veris-crear-error" })
        </div>

        <!-- 🔹 Franja horaria inicio -->
        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Franja_HI, htmlAttributes: new { @class = "veris-crear-label" })
            @Html.EditorFor(model => model.Franja_HI, new { htmlAttributes = new { @class = "form-control veris-crear-input", type = "time" } })
            @Html.ValidationMessageFor(model => model.Franja_HI, "", new { @class = "text-danger veris-crear-error" })
        </div>

        <!-- 🔹 Franja horaria fin -->
        <div class="form-group mb-4">
            @Html.LabelFor(model => model.Franja_HF, htmlAttributes: new { @class = "veris-crear-label" })
            @Html.EditorFor(model => model.Franja_HF, new { htmlAttributes = new { @class = "form-control veris-crear-input", type = "time" } })
            @Html.ValidationMessageFor(model => model.Franja_HF, "", new { @class = "text-danger veris-crear-error" })
        </div>

        <!-- 🔹 Botones -->
        <div class="veris-crear-button-group text-center mt-4">
            <input type="submit" value="Registrar" class="btn veris-crear-btn" />
            @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-outline-secondary ms-2" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
