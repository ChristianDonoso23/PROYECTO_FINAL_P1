@model WebApplication02_Con_Autenticacion.Models.recetas

@{
    ViewBag.Title = "Eliminar Receta Médica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container my-5 veris-eliminar-container">
    <div class="veris-eliminar-card shadow-lg p-4">
        <h2 class="veris-eliminar-title text-center">Eliminar Receta Médica</h2>
        <hr class="veris-eliminar-divider" />

        <p class="text-center text-muted mb-4">
            ¿Estás seguro de que deseas eliminar esta receta? Esta acción no se puede deshacer.
        </p>

        <dl class="row mb-4">
            <dt class="col-sm-4 veris-eliminar-label">Cantidad</dt>
            <dd class="col-sm-8 veris-eliminar-value">@Html.DisplayFor(model => model.Cantidad)</dd>

            <dt class="col-sm-4 veris-eliminar-label">Diagnóstico</dt>
            <dd class="col-sm-8 veris-eliminar-value">@Html.DisplayFor(model => model.consultas.Diagnostico)</dd>

            <dt class="col-sm-4 veris-eliminar-label">Medicamento</dt>
            <dd class="col-sm-8 veris-eliminar-value">@Html.DisplayFor(model => model.medicamentos.Nombre)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="veris-eliminar-buttons text-center mt-4">
                <input type="submit" value="Eliminar" class="btn veris-eliminar-btn mx-2" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-outline-secondary veris-eliminar-back mx-2" })
            </div>
        }
    </div>
</main>
