@model WebApplication02_Con_Autenticacion.Models.recetas

@{
    ViewBag.Title = "Registrar Nueva Receta Médica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container my-5 veris-crear-container">
    <h2 class="veris-crear-title">Registrar Nueva Receta Médica</h2>
    <p class="veris-crear-subtitle">Complete la información de la receta</p>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="veris-crear-form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <!-- Consulta -->
            <div class="mb-3">
                @Html.LabelFor(model => model.IdConsulta, "Consulta asociada", htmlAttributes: new { @class = "form-label fw-semibold" })
                @Html.DropDownList("IdConsulta", null, htmlAttributes: new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.IdConsulta, "", new { @class = "text-danger" })
            </div>

            <!-- Medicamento -->
            <div class="mb-3">
                @Html.LabelFor(model => model.IdMedicamento, "Medicamento", htmlAttributes: new { @class = "form-label fw-semibold" })
                @Html.DropDownList("IdMedicamento", null, htmlAttributes: new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.IdMedicamento, "", new { @class = "text-danger" })
            </div>

            <!-- Cantidad -->
            <div class="mb-3">
                @Html.LabelFor(model => model.Cantidad, htmlAttributes: new { @class = "form-label fw-semibold" })
                @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ejemplo: 2 tabletas diarias por 7 días" } })
                @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
            </div>

            <!-- Botones -->
            <div class="veris-crear-button-group text-center">
                <input type="submit" value="Registrar Receta" class="btn veris-crear-btn" />
                @Html.ActionLink("Cancelar y Volver", "Index", null, new { @class = "btn btn-outline-secondary ms-2" })
            </div>
        </div>
    }

</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
