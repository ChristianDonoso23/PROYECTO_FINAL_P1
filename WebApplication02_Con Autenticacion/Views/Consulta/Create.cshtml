@model WebApplication02_Con_Autenticacion.Models.consultas

@{
    ViewBag.Title = "Registrar Consulta Médica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container my-5 veris-crear-container">
    <h2 class="veris-crear-title">Registrar Nueva Consulta</h2>
    <p class="veris-crear-subtitle">Complete la información para registrar una nueva consulta médica</p>
    <hr class="veris-crear-divider" />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger veris-crear-validation" })

        <!-- 🔹 Médico -->
        <div class="form-group mb-3 veris-crear-group">
            @Html.LabelFor(model => model.IdMedico, "Médico", htmlAttributes: new { @class = "veris-crear-label" })
            @Html.DropDownList("IdMedico", null, "-- Seleccione un médico --", htmlAttributes: new { @class = "form-control veris-crear-input" })
            @Html.ValidationMessageFor(model => model.IdMedico, "", new { @class = "text-danger veris-crear-error" })
        </div>

        <!-- 🔹 Paciente -->
        <div class="form-group mb-3 veris-crear-group">
            @Html.LabelFor(model => model.IdPaciente, "Paciente", htmlAttributes: new { @class = "veris-crear-label" })
            @Html.DropDownList("IdPaciente", null, "-- Seleccione un paciente --", htmlAttributes: new { @class = "form-control veris-crear-input" })
            @Html.ValidationMessageFor(model => model.IdPaciente, "", new { @class = "text-danger veris-crear-error" })
        </div>

        <!-- 🔹 Fecha de consulta -->
        <div class="form-group mb-3 veris-crear-group">
            @Html.LabelFor(model => model.FechaConsulta, htmlAttributes: new { @class = "veris-crear-label" })
            @Html.EditorFor(model => model.FechaConsulta, new { htmlAttributes = new { @class = "form-control veris-crear-input", type = "date" } })
            @Html.ValidationMessageFor(model => model.FechaConsulta, "", new { @class = "text-danger veris-crear-error" })
        </div>

        <!-- 🔹 Hora de inicio -->
        <div class="form-group mb-3 veris-crear-group">
            @Html.LabelFor(model => model.HI, "Hora Inicio", htmlAttributes: new { @class = "veris-crear-label" })
            @Html.EditorFor(model => model.HI, new { htmlAttributes = new { @class = "form-control veris-crear-input", type = "time" } })
            @Html.ValidationMessageFor(model => model.HI, "", new { @class = "text-danger veris-crear-error" })
        </div>

        <!-- 🔹 Hora final -->
        <div class="form-group mb-3 veris-crear-group">
            @Html.LabelFor(model => model.HF, "Hora Fin", htmlAttributes: new { @class = "veris-crear-label" })
            @Html.EditorFor(model => model.HF, new { htmlAttributes = new { @class = "form-control veris-crear-input", type = "time" } })
            @Html.ValidationMessageFor(model => model.HF, "", new { @class = "text-danger veris-crear-error" })
        </div>

        <!-- 🔹 Diagnóstico -->
        <div class="form-group mb-4 veris-crear-group">
            @Html.LabelFor(model => model.Diagnostico, htmlAttributes: new { @class = "veris-crear-label" })
            @Html.TextAreaFor(model => model.Diagnostico, 5, 40, new { @class = "form-control veris-crear-input", placeholder = "Describa el diagnóstico o hallazgos del paciente..." })
            @Html.ValidationMessageFor(model => model.Diagnostico, "", new { @class = "text-danger veris-crear-error" })
        </div>

        <!-- 🔹 Botones -->
        <div class="veris-crear-button-group text-center mt-4">
            <input type="submit" value="Registrar" class="btn veris-crear-btn" />
            @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-outline-secondary veris-crear-back ms-2" })
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
