@model WebApplication02_Con_Autenticacion.Models.consultas

@{
    ViewBag.Title = "Registrar Consulta Médica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container my-5 veris-crear-container">
    <h2 class="veris-crear-title">Registrar Nueva Consulta</h2>
    <p class="veris-crear-subtitle">
        Complete la información para registrar una nueva consulta médica.
    </p>
    <hr class="veris-crear-divider" />

    @using (Html.BeginForm("Create", "Consulta", FormMethod.Post, new { @class = "form-horizontal veris-crear-form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger veris-crear-validation" })

        <!-- Médico -->
        <div class="form-group row mb-3 veris-crear-group">
            @Html.LabelFor(model => model.IdMedico, "Médico", htmlAttributes: new { @class = "control-label col-md-3 veris-crear-label" })
            <div class="col-md-9 veris-crear-input-col">
                @Html.DropDownList("IdMedico", null, "-- Seleccione un médico --", htmlAttributes: new { @class = "form-control veris-crear-input" })
                @Html.ValidationMessageFor(model => model.IdMedico, "", new { @class = "text-danger d-block veris-crear-error" })
            </div>
        </div>

        <!-- Paciente -->
        <div class="form-group row mb-3 veris-crear-group">
            @Html.LabelFor(model => model.IdPaciente, "Paciente", htmlAttributes: new { @class = "control-label col-md-3 veris-crear-label" })
            <div class="col-md-9 veris-crear-input-col">
                @Html.DropDownList("IdPaciente", null, "-- Seleccione un paciente --", htmlAttributes: new { @class = "form-control veris-crear-input" })
                @Html.ValidationMessageFor(model => model.IdPaciente, "", new { @class = "text-danger d-block veris-crear-error" })
            </div>
        </div>

        <!-- Fecha de consulta -->
        <div class="form-group row mb-3 veris-crear-group">
            @Html.LabelFor(model => model.FechaConsulta, htmlAttributes: new { @class = "control-label col-md-3 veris-crear-label" })
            <div class="col-md-9 veris-crear-input-col">
                @Html.TextBoxFor(model => model.FechaConsulta, "{0:yyyy-MM-dd}", new { @class = "form-control veris-crear-input", type = "date" })
                @Html.ValidationMessageFor(model => model.FechaConsulta, "", new { @class = "text-danger d-block veris-crear-error" })
            </div>
        </div>

        <!-- Hora de inicio -->
        <div class="form-group row mb-3 veris-crear-group">
            @Html.LabelFor(model => model.HI, "Hora Inicio", htmlAttributes: new { @class = "control-label col-md-3 veris-crear-label" })
            <div class="col-md-9 veris-crear-input-col">
                @Html.TextBoxFor(model => model.HI, "{0:hh\\:mm}", new { @class = "form-control veris-crear-input", type = "time" })
                @Html.ValidationMessageFor(model => model.HI, "", new { @class = "text-danger d-block veris-crear-error" })
            </div>
        </div>

        <!-- Hora final -->
        <div class="form-group row mb-3 veris-crear-group">
            @Html.LabelFor(model => model.HF, "Hora Fin", htmlAttributes: new { @class = "control-label col-md-3 veris-crear-label" })
            <div class="col-md-9 veris-crear-input-col">
                @Html.TextBoxFor(model => model.HF, "{0:hh\\:mm}", new { @class = "form-control veris-crear-input", type = "time" })
                @Html.ValidationMessageFor(model => model.HF, "", new { @class = "text-danger d-block veris-crear-error" })
            </div>
        </div>

        <!-- Diagnóstico -->
        <div class="form-group row mb-4 veris-crear-group">
            @Html.LabelFor(model => model.Diagnostico, htmlAttributes: new { @class = "control-label col-md-3 veris-crear-label" })
            <div class="col-md-9 veris-crear-input-col">
                @Html.TextAreaFor(model => model.Diagnostico, 5, 50, new { @class = "form-control veris-crear-input", placeholder = "Describa el diagnóstico o hallazgos del paciente..." })
                @Html.ValidationMessageFor(model => model.Diagnostico, "", new { @class = "text-danger d-block veris-crear-error" })
            </div>
        </div>

        <!-- Botones -->
        <div class="form-group row text-center veris-crear-button-group mt-4">
            <div class="col-md-12">
                <input type="submit" value="Registrar Consulta" class="btn veris-crear-btn" />
                @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-outline-secondary veris-crear-back ms-2" })
            </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
