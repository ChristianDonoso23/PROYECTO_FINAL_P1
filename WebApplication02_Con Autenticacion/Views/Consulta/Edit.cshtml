@model WebApplication02_Con_Autenticacion.Models.consultas

@{
    ViewBag.Title = "Editar Consulta Médica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container my-5 veris-editar-container">
    <div class="veris-editar-card shadow-lg p-4 rounded">
        <h2 class="veris-editar-title text-center mb-3">Editar Consulta Médica</h2>
        <p class="veris-editar-subtitle text-center">Modifique los datos necesarios y guarde los cambios</p>
        <hr class="veris-editar-divider" />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger veris-editar-validation" })
            @Html.HiddenFor(model => model.IdConsulta)

            <!-- 🔹 Médico -->
            <div class="form-group mb-3 veris-editar-group">
                @Html.LabelFor(model => model.IdMedico, "Médico", htmlAttributes: new { @class = "veris-editar-label" })
                @Html.DropDownList("IdMedico", null, "-- Seleccione un médico --", htmlAttributes: new { @class = "form-control veris-editar-input" })
                @Html.ValidationMessageFor(model => model.IdMedico, "", new { @class = "text-danger veris-editar-error" })
            </div>

            <!-- 🔹 Paciente -->
            <div class="form-group mb-3 veris-editar-group">
                @Html.LabelFor(model => model.IdPaciente, "Paciente", htmlAttributes: new { @class = "veris-editar-label" })
                @Html.DropDownList("IdPaciente", null, "-- Seleccione un paciente --", htmlAttributes: new { @class = "form-control veris-editar-input" })
                @Html.ValidationMessageFor(model => model.IdPaciente, "", new { @class = "text-danger veris-editar-error" })
            </div>

            <!-- 🔹 Fecha -->
            <div class="form-group mb-3 veris-editar-group">
                @Html.LabelFor(model => model.FechaConsulta, htmlAttributes: new { @class = "veris-editar-label" })
                @Html.EditorFor(model => model.FechaConsulta, new { htmlAttributes = new { @class = "form-control veris-editar-input", type = "date" } })
                @Html.ValidationMessageFor(model => model.FechaConsulta, "", new { @class = "text-danger veris-editar-error" })
            </div>

            <!-- 🔹 Hora inicio -->
            <div class="form-group mb-3 veris-editar-group">
                @Html.LabelFor(model => model.HI, "Hora de Inicio", htmlAttributes: new { @class = "veris-editar-label" })
                @Html.EditorFor(model => model.HI, new { htmlAttributes = new { @class = "form-control veris-editar-input", type = "time" } })
                @Html.ValidationMessageFor(model => model.HI, "", new { @class = "text-danger veris-editar-error" })
            </div>

            <!-- 🔹 Hora fin -->
            <div class="form-group mb-3 veris-editar-group">
                @Html.LabelFor(model => model.HF, "Hora de Finalización", htmlAttributes: new { @class = "veris-editar-label" })
                @Html.EditorFor(model => model.HF, new { htmlAttributes = new { @class = "form-control veris-editar-input", type = "time" } })
                @Html.ValidationMessageFor(model => model.HF, "", new { @class = "text-danger veris-editar-error" })
            </div>

            <!-- 🔹 Diagnóstico -->
            <div class="form-group mb-4 veris-editar-group">
                @Html.LabelFor(model => model.Diagnostico, htmlAttributes: new { @class = "veris-editar-label" })
                @Html.TextAreaFor(model => model.Diagnostico, 5, 40, new { @class = "form-control veris-editar-input", placeholder = "Describa el diagnóstico..." })
                @Html.ValidationMessageFor(model => model.Diagnostico, "", new { @class = "text-danger veris-editar-error" })
            </div>

            <!-- 🔹 Botones -->
            <div class="veris-editar-button-group text-center mt-4">
                <input type="submit" value="Guardar Cambios" class="btn veris-editar-btn" />
                @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-outline-secondary veris-editar-back ms-2" })
            </div>
        }
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
