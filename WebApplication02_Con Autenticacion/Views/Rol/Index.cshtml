@model IEnumerable<WebApplication02_Con_Autenticacion.Models.ViewModels.UserRoleViewModel>

@{
    ViewBag.Title = "Gestión de Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestión de Roles de Usuarios</h2>

<table class="table table-bordered table-striped">
    <tr>
        <th>Email</th>
        <th>Rol Actual</th>
        <th>Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Email</td>
            <td>@item.Roles</td>
            <td>
                @Html.ActionLink("Asignar Rol", "AsignarRol", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })

                @using (Html.BeginForm("QuitarRol", "Rol", new { id = item.Id }, FormMethod.Post, new { @style = "display:inline-block" }))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Está seguro de quitar todos los roles a este usuario?');">
                        Quitar Rol
                    </button>
                }
            </td>
        </tr>
    }
</table>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info mt-2">@TempData["Mensaje"]</div>
}
