@model WebApplication02_Con_Autenticacion.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container my-5 veris-crear-container">
    <h2 class="veris-crear-title">Cambiar Contraseña</h2>
    <p class="veris-crear-subtitle">Actualiza tu contraseña de manera segura</p>
    <hr class="veris-crear-divider" />

    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="veris-crear-form">
            @Html.ValidationSummary("", new { @class = "text-danger veris-register-validation" })

            <!-- Contraseña actual -->
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.OldPassword, "Contraseña actual", new { @class = "veris-register-label" })
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control veris-register-input", placeholder = "Ingresa tu contraseña actual" })
                @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger veris-register-error" })
            </div>

            <!-- Nueva contraseña -->
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.NewPassword, "Nueva contraseña", new { @class = "veris-register-label" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control veris-register-input", placeholder = "Crea una nueva contraseña" })
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger veris-register-error" })
            </div>

            <!-- Confirmar nueva contraseña -->
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.ConfirmPassword, "Confirmar contraseña", new { @class = "veris-register-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control veris-register-input", placeholder = "Repite la nueva contraseña" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger veris-register-error" })
            </div>

            <!-- Botones -->
            <div class="veris-crear-button-group text-center mt-4">
                <input type="submit" value="Cambiar Contraseña" class="btn veris-crear-btn" />
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-outline-secondary ms-2" })
            </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
