@model WebApplication02_Con_Autenticacion.Models.pacientes

@{
    ViewBag.Title = "Registrar Paciente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar Paciente</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Datos del Paciente</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- 🔹 Campo de selección de usuario existente o creación automática -->
        <div class="form-group">
            @Html.LabelFor(model => model.IdUsuario, "Usuario asociado", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList(
                    "IdUsuario",
                    (SelectList)ViewBag.IdUsuario,
                    "-- Crear nuevo usuario automáticamente --",
                    new { @class = "form-control" }
                )
                <small class="form-text text-muted">
                    Si no selecciona un usuario, se generará uno nuevo automáticamente con correo <b>hotmail.com</b> y contraseña <b>123</b>.
                </small>
                @Html.ValidationMessageFor(model => model.IdUsuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- 🔹 Nombre -->
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Ejemplo: Christian Donoso" })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- 🔹 Cédula -->
        <div class="form-group">
            @Html.LabelFor(model => model.Cedula, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Cedula, new { @class = "form-control", maxlength = "10", placeholder = "Ejemplo: 0102030405" })
                @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- 🔹 Edad -->
        <div class="form-group">
            @Html.LabelFor(model => model.Edad, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Edad, new { @class = "form-control", type = "number", placeholder = "Ejemplo: 35" })
                @Html.ValidationMessageFor(model => model.Edad, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- 🔹 Género -->
        <div class="form-group">
            @Html.LabelFor(model => model.Genero, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="Genero" name="Genero" class="form-control">
                    <option value="">Seleccione...</option>
                    <option value="M">Masculino</option>
                    <option value="F">Femenino</option>
                    <option value="O">Otro</option>
                </select>
                @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- 🔹 Estatura -->
        <div class="form-group">
            @Html.LabelFor(model => model.Estatura, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Estatura, new { @class = "form-control", placeholder = "Ejemplo: 170 (cm)" })
                @Html.ValidationMessageFor(model => model.Estatura, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- 🔹 Peso -->
        <div class="form-group">
            @Html.LabelFor(model => model.Peso, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Peso, new { @class = "form-control", placeholder = "Ejemplo: 70.5 (kg)" })
                @Html.ValidationMessageFor(model => model.Peso, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- 🔹 Foto -->
        <div class="form-group">
            @Html.LabelFor(model => model.Foto, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(
                    model => model.Foto,
                    (SelectList)ViewBag.Fotos,
                    "-- Seleccione una imagen --",
                    new { @class = "form-control" }
                )
                @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- 🔹 Botones -->
        <div class="form-group mt-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrar" class="btn btn-success" />
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary ms-2" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
