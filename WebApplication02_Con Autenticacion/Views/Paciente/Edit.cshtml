@model WebApplication02_Con_Autenticacion.Models.pacientes

@{
    ViewBag.Title = "Editar Paciente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Paciente</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Datos del Paciente</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdPaciente)
        @Html.HiddenFor(model => model.IdUsuario)

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cedula, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Cedula, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Edad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Edad, new { @class = "form-control", type = "number" })
                @Html.ValidationMessageFor(model => model.Edad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Genero, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="Genero" name="Genero" class="form-control">
                    <option value="">Seleccione...</option>
                    <option value="M" @(Model.Genero == "M" ? "selected" : "")>Masculino</option>
                    <option value="F" @(Model.Genero == "F" ? "selected" : "")>Femenino</option>
                    <option value="O" @(Model.Genero == "O" ? "selected" : "")>Otro</option>
                </select>
                @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Estatura, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Estatura, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Estatura, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Peso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Peso, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Peso, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Foto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Foto, (SelectList)ViewBag.Fotos,
                    "-- Seleccione una imagen --", new { @class = "form-control", id = "FotoSelect" })

                <img id="previewFoto" src="~/Imagenes/@Model.Foto"
                     alt="Vista previa"
                     style="max-width:150px; margin-top:10px; display:@(string.IsNullOrEmpty(Model.Foto) ? "none" : "block");" />

                @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary ms-2" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        // Mostrar vista previa de la imagen seleccionada
        document.getElementById("FotoSelect").addEventListener("change", function () {
            var selectedFile = this.value;
            var preview = document.getElementById("previewFoto");
            if (selectedFile) {
                preview.src = "/Imagenes/" + selectedFile;
                preview.style.display = "block";
            } else {
                preview.style.display = "none";
            }
        });
    </script>
}
