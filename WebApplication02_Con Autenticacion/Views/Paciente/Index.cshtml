@model IEnumerable<WebApplication02_Con_Autenticacion.Models.pacientes>

@{
    ViewBag.Title = "Listado de Pacientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container my-4 veris-tabla-container">
    <h2 class="veris-tabla-title">Listado de Pacientes</h2>

    @if (User.IsInRole("Administrador") || User.IsInRole("SuperAdmin"))
    {
        <p> @Html.ActionLink("Registrar nuevo paciente", "Create", null, new { @class = "btn btn-success mb-3" }) </p>
    }

    <div class="veris-tabla-wrapper">
        <table class="table veris-tabla table-bordered table-striped">
            <thead class="veris-tabla-thead">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Cedula)</th>
                    <th>@Html.DisplayNameFor(model => model.Edad)</th>
                    <th>@Html.DisplayNameFor(model => model.Genero)</th>
                    <th>@Html.DisplayNameFor(model => model.Estatura)</th>
                    <th>@Html.DisplayNameFor(model => model.Peso)</th>
                    <th>@Html.DisplayNameFor(model => model.Foto)</th>
                    <th>@Html.DisplayNameFor(model => model.AspNetUsers.Email)</th>
                    <th>Acciones</th>
                </tr>
            </thead>

            <tbody class="veris-tabla-body-content">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@item.Cedula.ToString("D10")</td>
                        <td>@Html.DisplayFor(modelItem => item.Edad)</td>
                        <td>@Html.DisplayFor(modelItem => item.Genero)</td>
                        <td>@Html.DisplayFor(modelItem => item.Estatura)</td>
                        <td>@Html.DisplayFor(modelItem => item.Peso)</td>
                        <td>
                            <img src="~/Imagenes/@item.Foto"
                                 alt="Foto de @item.Nombre"
                                 width="50"
                                 class="veris-tabla-img" />
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.AspNetUsers.Email)</td>

                        <td class="veris-tabla-acciones">
                            @if (User.IsInRole("Administrador") || User.IsInRole("SuperAdmin") || User.IsInRole("Medico"))
                            {
                                @Html.ActionLink("Editar", "Edit", new { id = item.IdPaciente }, new { @class = "btn btn-sm veris-tabla-btn editar" })
                            }

                            @Html.ActionLink("Detalles", "Details", new { id = item.IdPaciente }, new { @class = "btn btn-sm veris-tabla-btn detalles" })

                            @if (User.IsInRole("Administrador") || User.IsInRole("SuperAdmin"))
                            {
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdPaciente }, new { @class = "btn btn-sm veris-tabla-btn eliminar" })
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>
