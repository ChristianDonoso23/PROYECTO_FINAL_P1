@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Proyecto VERIS</title>

    <!-- Bootstrap -->
    <!-- Iconos -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Estilos del proyecto -->
    <link rel="stylesheet" href="~/Content/styles.css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-2">
        <div class="container-fluid px-4">
            <!-- LOGO -->
            <a class="navbar-brand d-flex flex-column align-items-start" href="@Url.Action("Index", "Home")">
                <img src="~/Imagenes/Logo/logo.png" alt="Logo Veris" class="img-fluid mb-1" style="height: 35px; width: 100%;">
                <span class="slogan">Hacemos <strong>fácil cuidarte</strong></span>
            </a>

            <!-- Botón hamburguesa -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuPrincipal"
                    aria-controls="menuPrincipal" aria-expanded="false" aria-label="Alternar navegación">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- MENÚ -->
            <div class="collapse navbar-collapse justify-content-between" id="menuPrincipal">
                <ul class="navbar-nav flex-grow-1 justify-content-evenly text-center">

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Paciente")"><i class="bi bi-people-fill me-1"></i>Pacientes</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Medico")"><i class="bi bi-person-badge-fill me-1"></i>Médicos</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Especialidad")"><i class="bi bi-heart-pulse me-1"></i>Especialidades</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Medicamento")"><i class="bi bi-capsule me-1"></i>Medicamentos</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Consulta")"><i class="bi bi-clipboard2-pulse me-1"></i>Consultas</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Receta")"><i class="bi bi-receipt me-1"></i>Recetas</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Rol")"><i class="bi bi-shield-lock-fill me-1"></i>Gestión de Roles</a></li>
                        }
                        else if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Paciente")"><i class="bi bi-people-fill me-1"></i>Pacientes</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Medico")"><i class="bi bi-person-badge-fill me-1"></i>Médicos</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Especialidad")"><i class="bi bi-heart-pulse me-1"></i>Especialidades</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Medicamento")"><i class="bi bi-capsule me-1"></i>Medicamentos</a></li>
                        }
                        else if (User.IsInRole("Medico"))
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Consulta")"><i class="bi bi-clipboard2-pulse me-1"></i>Consultas</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Receta")"><i class="bi bi-receipt me-1"></i>Recetas</a></li>
                        }
                        else if (User.IsInRole("Paciente"))
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Paciente")"><i class="bi bi-person-circle me-1"></i>Mis Datos</a></li>
                        }
                    }

                </ul>

                <!-- Sección de Login / Logout -->
                <div class="d-flex flex-wrap justify-content-center justify-content-lg-end mt-2 mt-lg-0">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </nav>

    <!-- CONTENIDO PRINCIPAL -->
    <div class="container body-content mt-4">
        @RenderBody()
        <hr />
    </div>

    <!-- FOOTER VERIS -->
    <footer class="footer-veris mt-5">
        <!-- Franja superior con redes -->
        <div class="footer-top text-center text-white py-3 bg-primary">
            <h6 class="mb-2">Encuentra nuestras redes sociales</h6>
            <div class="d-flex justify-content-center gap-3">
                <a href="#" class="social-icon text-white"><i class="bi bi-whatsapp"></i></a>
                <a href="#" class="social-icon text-white"><i class="bi bi-facebook"></i></a>
                <a href="#" class="social-icon text-white"><i class="bi bi-instagram"></i></a>
                <a href="#" class="social-icon text-white"><i class="bi bi-twitter"></i></a>
                <a href="#" class="social-icon text-white"><i class="bi bi-youtube"></i></a>
            </div>
        </div>

        <!-- Franja inferior -->
        <div class="footer-bottom text-center text-white py-3 bg-dark">
            © @DateTime.Now.Year - Proyecto VERIS
        </div>
    </footer>

    <!-- Bootstrap JS -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
