@model WebApplication02_Con_Autenticacion.Models.medicos

@{
    ViewBag.Title = "Eliminar Médico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container my-5 veris-eliminar-container">
    <div class="veris-eliminar-card shadow-lg p-4 rounded">
        <h2 class="veris-eliminar-title mb-4 text-center">Eliminar Médico</h2>
        <hr class="veris-eliminar-divider" />

        <h4 class="text-center mb-4 text-danger">¿Está seguro de que desea eliminar este registro?</h4>

        <div class="row veris-eliminar-content">
            <!-- 📋 Columna izquierda -->
            <div class="col-md-7">
                <dl class="row veris-eliminar-list">
                    <dt class="col-sm-4 veris-eliminar-label">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-8 veris-eliminar-value">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                    <dt class="col-sm-4 veris-eliminar-label">
                        @Html.DisplayNameFor(model => model.AspNetUsers.Email)
                    </dt>
                    <dd class="col-sm-8 veris-eliminar-value">
                        @Html.DisplayFor(model => model.AspNetUsers.Email)
                    </dd>

                    <dt class="col-sm-4 veris-eliminar-label">
                        @Html.DisplayNameFor(model => model.especialidades.Descripcion)
                    </dt>
                    <dd class="col-sm-8 veris-eliminar-value">
                        @Html.DisplayFor(model => model.especialidades.Descripcion)
                    </dd>
                </dl>
            </div>

            <!-- 🖼️ Columna derecha: Foto -->
            <div class="col-md-5 text-center veris-eliminar-foto">
                <div class="veris-eliminar-foto-wrapper">
                    @if (!string.IsNullOrEmpty(Model.Foto))
                    {
                        <img src="~/Imagenes/@Model.Foto"
                             alt="Foto de @Model.Nombre"
                             class="veris-eliminar-img img-fluid" />
                    }
                    else
                    {
                        <div class="veris-eliminar-foto-placeholder">
                            <i class="bi bi-person-circle fs-1 text-muted"></i>
                            <p class="text-muted mt-2">Sin foto disponible</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- 🔹 Botones -->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="veris-eliminar-buttons text-center mt-4">
                <input type="submit" value="Eliminar" class="btn veris-eliminar-btn mx-2" />
                @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-outline-secondary veris-eliminar-back mx-2" })
            </div>
        }
    </div>
</main>
