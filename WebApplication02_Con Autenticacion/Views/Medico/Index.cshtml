@model IEnumerable<WebApplication02_Con_Autenticacion.Models.medicos>

@{
    ViewBag.Title = "Médicos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestión de Médicos</h2>

<!-- Solo Administrador o SuperAdmin pueden crear -->
@if (User.IsInRole("Administrador") || User.IsInRole("SuperAdmin"))
{
    <p>
        @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-success mb-3" })
    </p>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Foto)</th>
            <th>@Html.DisplayNameFor(model => model.AspNetUsers.Email)</th>
            <th>@Html.DisplayNameFor(model => model.especialidades.Descripcion)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>
                    <img src="~/Content/FotosMedicos/@item.Foto" alt="Foto" width="70" class="rounded" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.AspNetUsers.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.especialidades.Descripcion)</td>
                <td>
                    <!-- Todos los roles pueden ver detalles -->
                    @Html.ActionLink("Detalles", "Details", new { id = item.IdMedico }, new { @class = "btn btn-info btn-sm mx-1" })

                    <!-- Solo Administrador y SuperAdmin pueden editar o eliminar -->
                    @if (User.IsInRole("Administrador") || User.IsInRole("SuperAdmin"))
                    {
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdMedico }, new { @class = "btn btn-warning btn-sm mx-1" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdMedico }, new { @class = "btn btn-danger btn-sm mx-1" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
