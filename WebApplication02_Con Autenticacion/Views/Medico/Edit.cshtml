@model WebApplication02_Con_Autenticacion.Models.medicos

@{
    ViewBag.Title = "Editar Médico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="veris-crear-container">
    <h2 class="veris-crear-title">Editar Médico</h2>
    <p class="veris-crear-subtitle">Actualice los datos del médico</p>

    @using (Html.BeginForm("Edit", "Medico", FormMethod.Post, new { enctype = "multipart/form-data", @class = "veris-crear-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.IdMedico)

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control veris-register-input" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.IdEspecialidad, "Especialidad")
            @Html.DropDownList("IdEspecialidad", null, "-- Seleccione una especialidad --", new { @class = "form-control veris-register-input" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.IdUsuario, "Usuario")
            @Html.DropDownList("IdUsuario", null, "-- Seleccione un usuario --", new { @class = "form-control veris-register-input" })
        </div>

        <div class="form-group mb-3">
            <label>Foto Actual</label><br />
            @if (!string.IsNullOrEmpty(Model.Foto))
            {
                <img src="~/Imagenes/@Model.Foto" width="100" class="veris-tabla-img" />
            }
            else
            {
                <span class="text-muted">Sin imagen</span>
            }
        </div>

        <div class="form-group mb-3">
            <label>Actualizar Foto</label>
            <input type="file" name="imagenFile" class="form-control veris-register-input" />
        </div>

        <div class="veris-crear-button-group">
            <input type="submit" value="Guardar Cambios" class="btn veris-crear-btn" />
            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary ms-2" })
        </div>
    }
</div>
